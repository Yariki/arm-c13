    <Style TargetType="armLookupControl:ARMLookupControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="armLookupControl:ARMLookupControl">
                    <Grid x:Name="LookupMainGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="PART_TextBoxValue" Grid.Column="0" Margin="0" Padding="0" IsReadOnly="True" />

                        <Button x:Name="PART_ButtonWnd" Grid.Column="1" Style="{StaticResource ButtonLookupFind}" />

                        <Button x:Name="PART_ButtonWndClear" Grid.Column="2" Style="{StaticResource ButtonLookupClear}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
