<Window x:Class="ARM.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.codeplex.com/CompositeWPF"
        xmlns:infr="clr-namespace:ARM.Infrastructure.Region;assembly=ARM.Infrastructure"
        Title="MainWindow" Height="650" Width="825"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" cal:RegionManager.RegionName="{x:Static infr:ARMMainRegionNames.MENU_REGION}"></ContentControl>

        <ContentControl Grid.Row="1" cal:RegionManager.RegionName="{x:Static infr:ARMMainRegionNames.TOOLBOX_REGION}"></ContentControl>

        <ContentControl Grid.Row="2" cal:RegionManager.RegionName="{x:Static infr:ARMMainRegionNames.WORKSPACE_REGION}"></ContentControl>

        <ContentControl Grid.Row="3" cal:RegionManager.RegionName="{x:Static infr:ARMMainRegionNames.STATUSBAR_REGION}"></ContentControl>
    </Grid>
</Window>